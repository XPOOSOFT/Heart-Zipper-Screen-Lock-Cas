<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/bg_reaward"
    android:padding="16dp">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/titleBack"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:padding="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/reward"
        android:textColor="@color/white"
        android:paddingHorizontal="@dimen/_15sdp"
        android:paddingVertical="@dimen/_14sdp"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/titleBack"
        app:layout_constraintBottom_toBottomOf="@id/titleBack"
        app:layout_constraintStart_toEndOf="@id/titleBack"
        tools:ignore="RtlSymmetry" />

    <View
        android:id="@+id/rewardCounter"
        android:layout_width="0dp"
        android:layout_height="@dimen/_70sdp"
        android:background="@drawable/rect_btn_ad_btn_new"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleBack" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:clipToPadding="false"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/item_category"
        app:layout_constraintTop_toBottomOf="@id/rewardCounter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nativeExitAd"
        />

    <TextView
        android:id="@+id/timeTextTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/claim_your_next_reward_in"
        android:textColor="@color/white"
        android:fontFamily="@font/droid_sans_mono"
        android:textSize="@dimen/_10sdp"
        android:gravity="center|start"
        android:paddingHorizontal="@dimen/_20sdp"
        android:singleLine="true"
        app:layout_constraintBottom_toTopOf="@id/timeText"
        app:layout_constraintEnd_toEndOf="@+id/rewardCounter"
        app:layout_constraintStart_toStartOf="@+id/rewardCounter"
        app:layout_constraintTop_toTopOf="@+id/rewardCounter" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/_00_00_00"
        android:textColor="@color/white"
        android:textSize="@dimen/_25sdp"
        android:fontFamily="@font/digitalmono"
        android:paddingHorizontal="@dimen/_20sdp"
        android:singleLine="true"
        android:gravity="center|start"
        app:layout_constraintBottom_toBottomOf="@+id/rewardCounter"
        app:layout_constraintEnd_toEndOf="@+id/rewardCounter"
        app:layout_constraintStart_toStartOf="@+id/rewardCounter"
        app:layout_constraintTop_toBottomOf="@+id/timeTextTitle" />

    <FrameLayout
        android:id="@+id/nativeExitAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/_50sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/adView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:letterSpacing="0.2"
        android:text="@string/ad"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:textSize="14sp"
        android:background="@drawable/round_btn_ads"
        app:layout_constraintBottom_toBottomOf="@+id/nativeExitAd"
        app:layout_constraintEnd_toEndOf="@+id/nativeExitAd"
        app:layout_constraintStart_toStartOf="@+id/nativeExitAd"
        app:layout_constraintTop_toTopOf="@+id/nativeExitAd" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ads_lay"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:background="@drawable/rect_menu_language"
        android:backgroundTint="@color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/_10sdp"
        >

        <ProgressBar
            android:id="@+id/animation"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintEnd_toEndOf="@id/ads_lay"
            app:layout_constraintStart_toStartOf="@id/ads_lay"
            app:layout_constraintTop_toTopOf="@id/ads_lay"
            app:layout_constraintBottom_toTopOf="@id/warning"
            />

        <TextView
            android:id="@+id/warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:text="@string/loading_ad"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="@id/ads_lay"
            app:layout_constraintLeft_toLeftOf="@id/ads_lay"
            app:layout_constraintRight_toRightOf="@id/ads_lay"
            app:layout_constraintTop_toBottomOf="@id/animation"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
